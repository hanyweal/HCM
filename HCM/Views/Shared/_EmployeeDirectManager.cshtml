@model HCM.Models.EmployeesViewModel


<table class="table table-responsive table-condensed table-striped" style="text-align:right">
    <thead>
        <tr>
            <th colspan="4" class="col-md-12 alert alert-warning">
                @Resources.Globalization.PeriorityOfAuthorizedPersonText
            </th>
        </tr>
    </thead>
    <tr>
        <td class="col-md-3">
            <label class="control-label">@Resources.Globalization.EmployeeCodeNoText</label>
        </td>
        <td class="col-md-3">
            <label class="control-label">@Resources.Globalization.EmployeeNameArText</label>
        </td>
        <td class="col-md-3">
            @*<label class="control-label">@Resources.Globalization.OrganizationNameText</label>*@
        </td>
        <td class="col-md-3">
            @*<label class="control-label"></label>*@
        </td>
    </tr>
    <tr>
        <td class="col-md-3">
            @Html.TextBoxFor(model => model.EmployeeCodeNo, new { @class = "form-control", @readonly = "readonly" })
            <input type="hidden" id="hdnFldAuthorizedPersonCodeID" />
        </td>
        <td class="col-md-3">
            @Html.TextBoxFor(model => model.EmployeeNameAr, new { @class = "form-control", @readonly = "readonly" })
        </td>
        <td class="col-md-3">
            @*@Html.TextBoxFor(model => model.EmployeeNameAr, new { @class = "form-control", @readonly = "readonly" })
                <input id="txtOrganizationName" type="text" class="form-control" readonly />*@
        </td>
        <td class="col-md-3">
            @*<input id="txtJobName" type="text" class="form-control" readonly />*@
        </td>
    </tr>
</table>
