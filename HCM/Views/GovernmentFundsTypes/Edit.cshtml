@model HCM.Models.GovernmentFundsTypesViewModel
@using HCM.Classes.Enums
@using HCMBLL.Enums
@using HCM.Models

@{
    ViewBag.Title = Resources.Globalization.EditGovernmentFundsTypsText;
}

<script type="text/javascript">

    function OnSuccess() {
        $("#divAlert").load('@RazorHelper.ShowAlert(this, ModalTypes.Success, Globals.Utilities.RemoveSpace(@Resources.Globalization.SavedDoneAlertText))');
    }

    function OnFailure() {
        $("#divAlert").load('@RazorHelper.ShowAlert(this, ModalTypes.Failure, "Error")');
    }

</script>

<p style="font-size:larger">@Resources.Globalization.EditGovernmentFundsTypsText</p>

<div class="panel panel-default" style="padding:0px">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-9">
                @Resources.Globalization.EditGovernmentFundsDescTypsText
            </div>
            <div class="col-md-3" style="text-align:left">

            </div>
        </div>
    </div>
    <div class="panel-body">
        @using (Ajax.BeginForm("Edit", "GovernmentFundsTypes", new AjaxOptions()
        {
            OnSuccess = "OnSuccess",
            OnFailure = "OnFailure",
            HttpMethod = "POST",
        }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <span class="control-label">@Resources.Globalization.GovernmentFundsInfoTypsText</span><br />
            <table class="table table-responsive table-condensed table-striped">
                <tbody>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.GovernmentFundTypeName, new { @class = "control-label" })
                        </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextBoxFor(model => model.GovernmentFundTypeName, new { @class = "form-control", @id = "txtGovernmentFundTypeName", @type = "string", @value = "" })       @*TxtHijriPicker*@
                            @Html.ValidationMessageFor(model => model.GovernmentFundTypeName, "", new { @class = "text-danger" })
                        </td>
                        <td></td>
                    </tr>
                </tbody>
            </table>

            <table class="table table-responsive table-condensed">
                <tr>
                    <td>
                        <div class="form-group">
                            <center>
                                <input type="submit" class="btn btn-default" name="BtnSave" value="@Resources.Globalization.SaveText" />
                            </center>
                        </div>
                    </td>
                </tr>
            </table>
            @Html.HiddenFor(model => model.GovernmentFundTypeID)
        }
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm("Index", "GovernmentFundsTypes"))
        {
            <input type="submit" class="btn btn-default" name="BtnBack" value="@Resources.Globalization.BacktoListText" />
        }
    </div>
</div>

